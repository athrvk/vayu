{
	"appId": "com.vayu.client",
	"productName": "Vayu",
	"directories": {
		"output": "release",
		"buildResources": "build"
	},
	"files": ["dist/**/*", "dist-electron/**/*", "package.json"],
	"extraResources": [
		{
			"from": "build/resources/bin/",
			"to": "bin",
			"filter": ["**/*"]
		}
	],
	"asar": true,
	"artifactName": "${productName}-${version}-${arch}.${ext}",
	"nsis": {
		"oneClick": false,
		"perMachine": false,
		"allowToChangeInstallationDirectory": true,
		"deleteAppDataOnUninstall": false,
		"allowElevation": true,
		"runAfterFinish": true,
		"include": "installer/installer.nsh",
		"uninstallDisplayName": "Vayu",
		"createDesktopShortcut": "always",
		"createStartMenuShortcut": true,
		"shortcutName": "Vayu",
		"license": "../LICENSE"
	},
	"mac": {
		"category": "public.app-category.developer-tools",
		"target": [
			{
				"target": "dmg",
				"arch": ["universal"]
			}
		],
		"icon": "build/icon.png",
		"artifactName": "${productName}-${version}-${arch}.${ext}",
		"hardenedRuntime": true,
		"gatekeeperAssess": false,
		"entitlements": "installer/entitlements.mac.plist",
		"entitlementsInherit": "installer/entitlements.mac.plist"
	},
	"dmg": {
		"contents": [
			{
				"x": 130,
				"y": 220
			},
			{
				"x": 410,
				"y": 220,
				"type": "link",
				"path": "/Applications"
			}
		],
		"title": "${productName} ${version}",
		"window": {
			"width": 540,
			"height": 380
		}
	},
	"linux": {
		"target": ["AppImage", "deb"],
		"category": "Development",
		"icon": "build/icons",
		"maintainer": "Atharva Kusumbia <atharvakusumbia@gmail.com>"
	},
	"appImage": {
		"artifactName": "${productName}-${version}-${arch}.${ext}",
		"category": "Development",
		"description": "Vayu - High-Performance API Testing Platform",
		"license": "../LICENSE"
	},
	"deb": {
		"afterInstall": "installer/linux-postinst.sh",
		"afterRemove": "installer/linux-postrm.sh",
		"fpm": ["--before-remove=installer/linux-prerm.sh"]
	},
	"win": {
		"target": ["nsis"],
		"icon": "build/icon.ico"
	}
}

{
	"name": "vayu-client",
	"version": "0.1.3",
	"description": "Vayu - High-Performance API Testing Platform",
	"author": {
		"name": "Atharva Kusumbia",
		"email": "atharvakusumbia@gmail.com"
	},
	"homepage": "https://github.com/athrvk/vayu",
	"main": "dist-electron/main.js",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"electron:compile": "tsc -p tsconfig.node.json",
		"electron:watch": "tsc -p tsconfig.node.json --watch",
		"kill-ports": "npx kill-port 5173 9876",
		"electron:dev": "pnpm kill-ports && concurrently -k -r \"pnpm:dev\" \"pnpm:electron:watch\" \"wait-on http://localhost:5173 && pnpm electron:compile && pnpm electron:start\"",
		"electron:start": "cross-env NODE_ENV=development electron .",
		"electron:build": "pnpm electron:compile && pnpm build && electron-builder --config electron-builder.json",
		"electron:pack": "electron-builder --config electron-builder.json",
		"clean": "rimraf dist dist-electron release build/resources/bin build/icon.png build/icon.ico build/icon.icns.png build/icons tsconfig.node.tsbuildinfo && rimraf ../engine/build ../engine/build-release",
		"clean:all": "pnpm clean && rimraf node_modules",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html,yml,yaml,cjs,mjs}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html,yml,yaml,cjs,mjs}\"",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@monaco-editor/react": "^4.7.0",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-popover": "^1.1.15",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tabs": "^1.1.13",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tanstack/react-query": "^5.90.17",
		"@tanstack/react-query-devtools": "^5.91.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"electron-store": "^11.0.2",
		"lucide-react": "^0.562.0",
		"monaco-editor": "^0.55.1",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-resizable-panels": "^4.4.1",
		"recharts": "^3.6.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"zustand": "^5.0.10"
	},
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^25.0.8",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"@vitejs/plugin-react": "^5.1.2",
		"autoprefixer": "^10.4.23",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.26",
		"kill-port": "^2.0.1",
		"postcss": "^8.5.6",
		"prettier": "^3.4.2",
		"rimraf": "^6.1.2",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"wait-on": "^9.0.3"
	},
	"license": "MIT"
}
